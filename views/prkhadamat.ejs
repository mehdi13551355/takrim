<style>
    @font-face {
        font-family: 'Vazir';
        src: url('fonts/BYekan.woff2') format('woff2'),
            url('fonts/BYekan.woff') format('woff');
    }

    * {
        font-family: "Vazir", Tahoma, sans-serif;
    }

    header {
        grid-area: header;
        color: white;
        background: linear-gradient(135deg, #74b0b4, #84fab0);
    }

    .register-container {
        grid-area: main;
        width: 100%;
        max-width: 400px;
        padding: 10px;
        background: #fff;
        border-radius: 10px;
         direction: rtl;
    }

    .register-container h2 {
        text-align: center;
        margin-bottom: 5px;
        margin-top: 0%;
        color: #333;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-group label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
        color: #555;
    }

    .form-group input {
        width: 90%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .form-group input:focus {
        border-color: #8fd3f4;
        outline: none;
    }

    .srch-button {
        width: 90%;
        padding: 10px;
        background: #8fd3f4;
        border: none;
        border-radius: 5px;
        color: #fff;
        font-weight: bold;
        cursor: pointer;
    }

    .register-button:hover {
        background: #84fab0;
    }

    .register-footer {
        text-align: center;
        margin-top: 10px;
        color: #555;
    }

    .register-footer a {
        color: #8fd3f4;
        text-decoration: none;
    }

    .register-footer a:hover {
        text-decoration: underline;
    }

    .error {
        text-align: center;
        margin-top: 10px;
        color: #ad1919;
    }

    .blink {
        animation: blink 1s step-end infinite;
    }

    @keyframes blink {
        50% {
            opacity: 0;
        }
    }

    @media (max-width: 768px) {
        .register-container {
            padding: 15px;
        }

        .srch-button {
            font-size: 0.9rem;
        }
    }
</style>
<body>
        <div class="register-container">
            <h2>فرم رهگیری خدمات</h2>
            <div class="form-group">
                <label for="shkhadamat">شناسه رهگیری:</label>
                <input type="text" id="shkhadamat" placeholder=" شناسه رهگیری خود را وارد کنید" required
                    oninvalid="this.setCustomValidity('لطفاً این فیلد را پر کنید')"
                    oninput="this.setCustomValidity('')">
                <button onclick="loadPage('prkhadamattabale', document.getElementById('shkhadamat').value)" class="srch-button">جستجوی لیست خدمات</button>
                <% if (error) { %>
                    <div class="error blink">
                        <%= error %>
                    </div>
                    <% } %>
            </div>
            <div id="contentsub">

            </div>
        </div>
    <!-- <script src="/js/main.js"></script> -->
    <!-- <script src="/js/prkhadamat.js"></script> -->
</body>